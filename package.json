{
  "name": "upbox2-ui",
  "private": true,
  "version": "0.1.0",
  "description": "Upbox2 UI Design System - Vue 3 components built on reka-ui",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],

  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "eslint packages/*/src --ext .ts,.vue",
    "format": "prettier --write packages/*/src/**/*.{ts,vue,json}"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "license": "MIT"
}
